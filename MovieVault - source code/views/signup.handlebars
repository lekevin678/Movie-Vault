<html>
    <div> <p>Welcome to Movie Vault!</p> </div>
        {{#each error}}
            <div class="error-background"> <div class="error"> {{msg}} </div> </div>
        {{/each}}

            <div>
                <form action="signup" method="POST">
                    <label for="Name">Name</label>
                    <input type="text" id="nameEntry" name="name" required><br><br>
                    <label for="Email">Email</label>
                    <input type="email" id="emailEntry" name="email" required><br><br>
                    <label for="Company">Company (Optional)</label>
                    <input type="text" id="compnyEntry" name="company"><br><br>
                    <label for="Username">Username</label>
                    <input type="text" id="usernameEntry" name="username" required><br><br>
                    <label for="Password">Password</label>
                    <input type="password" id="passwordEntry" name="password" required><br><br>
                    <input type="submit" value="Finish">
                </form>
            </div>
</html>